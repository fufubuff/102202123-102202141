.container {
  display: flex;
  flex-direction: column;
  height: 100vh; /* 全屏高度 */
  background-color: #ffffff;
}

/* 个人资料部分 */
.profile-container {
  position: relative;
  width: 100%;
  height: 35vh; /* 调整背景图高度以适应中间的 Tab栏 */
}

.background-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.avatar-container {  
  position: absolute;  
  bottom: 10px; /* 将头像部分向下移动，以便悬浮于背景之上 */  
  right: 10px; /* 头像靠右侧 */  
  display: flex;  
  align-items: center; /* 确保子元素在垂直方向上中心对齐 */  
  flex-direction: row-reverse; /* 反转 flex 子元素的顺序，使名称位于头像左侧 */  
}  
  
.avatar {  
  width: 70px;  
  height: 70px;  
  border-radius: 10px; /* 圆角设置 */  
  box-shadow: 0 0 8px rgba(0, 0, 0, 0.6); /* 添加阴影以增强悬浮效果 */  
  /* margin-left: 20px; 这行现在不需要了，因为我们会用 flex 布局来控制间距 */  
}  
  
.name {  
  color: white;  
  font-size: 16px;  
  text-align: right; /* 文本保持右对齐 */  
  margin-right: 8px; /* 与头像保持一定间隔 */  
  line-height: 1.5; /* 提升行高，使文本在垂直方向上占据更多空间 */  
  padding-top: 4px; /* 在文本上方添加内边距，进一步增加高度 */  
  padding-bottom: 25px; /* 在文本下方添加内边距，保持高度平衡 */  
}
/* Tab栏 */
.tab-bar {
  display: flex;
  justify-content: space-around;
  /* 移除背景颜色 */
  background-color: transparent;
  /* 移除内边距和外边距 */
  padding: 0;
  margin: 0;
  /* 移除边框 */
  border: none;
  /* 保持固定定位 */
  position: fixed;
  top: 305px; /* 与 profile-container 高度一致 */
  left: 0;
  right: 0;
  /* 根据图片高度调整 tab-bar 高度 */
  height: 35px; /* 调整为适合图片的高度 */
  /* 移除阴影或其他可能的背景效果 */
  box-shadow: none;
  /* 可选：设置透明度 */
  /* opacity: 0.9; */
  z-index: 1000;
}

.tab-item {
  flex: 1;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0; /* 移除内边距 */
  margin: 0; /* 移除外边距 */
}


.tab-icon {
  width: 140px; /* 根据您的图片尺寸调整 */
  height: 140px;
  display: block; /* 避免内联元素的间距问题 */
  background-color: transparent; /* 确保背景透明 */
  transition: transform 0.2s ease;
  border-radius: 20px; /* 添加圆角效果，半径为图片宽度的一半，实现圆形按钮 */
  overflow: hidden; 
}

.tab-item:active .tab-icon {
  transform: scale(1.2);
}


/* 可滑动内容部分 */
.content-scroll {
  position: absolute;
  top: 340px; /* profile-container height (280px) + tab-bar height (50px) */
  left: 0;
  right: 0;
  bottom: 0; /* 延伸到页面底部 */
  overflow-y: scroll;
  padding: 10px;
  background-color: #f0f0f0;
}

.no-content-text {  
  color: gray; /* 文字颜色设置为灰色 */  
  text-align: center; /* 文字居中 */  
  font-size: 16px; /* 设置字体大小，你可以根据需要调整 */  
  display: block; /* 确保text元素表现为块级元素，以便应用居中样式 */  
  margin: 20px 0; /* 可选，添加一些外边距使布局更美观 */  
}

