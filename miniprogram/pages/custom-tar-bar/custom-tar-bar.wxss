.tab-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 60px; /* 可以根据需要调整 */
  background-color: #ffffff;
  border-top: 1px solid #ccc; /* 分隔线 */
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tab-icon {
  width: 24px; /* 图标大小 */
  height: 24px;
}

.tab-text {
  font-size: 12px; /* 文本大小 */
  color: #a6a6a6; /* 默认颜色 */
}
