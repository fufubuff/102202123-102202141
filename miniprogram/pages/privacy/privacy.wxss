.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  padding: 20px;
}

.modal {
  background-color: white;
  border-radius: 12px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  padding: 20px;
}

.modal-content {
  display: flex;
  flex-direction: column;
}

.modal-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}

.modal-text {
  font-size: 14px;
  line-height: 1.5;
  margin-bottom: 20px;
}

.highlight {
  color: blue;
  text-decoration: underline;
}

.button-group {
  display: flex;
  justify-content: space-between;
}

button {
  flex: 1;
  margin: 0 5px;
}
