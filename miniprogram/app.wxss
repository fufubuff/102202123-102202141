/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 
button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}
.tab-bar {
  position: fixed;
  bottom: 10px; /* 控制导航栏距离页面底部的距离 */
  width: 100%;
  height: 60px; /* 控制导航栏高度 */
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: white;
  border-radius: 20px; /* 圆角 */
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* 阴影效果 */
  padding: 10px 0; /* 内边距 */
  z-index: 100; /* 确保它位于页面顶部 */
}

/* 图标样式 */
.icon {
  width: 30px;  /* 图标宽度 */
  height: 30px; /* 图标高度 */
}

/* 每个 tab 项的样式 */
.tab-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #666; /* 未选中状态颜色 */
}

/* 选中状态 */
.tab-item.active {
  color: #007aff; /* 选中状态颜色 */
}

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}