/* 关键词容器样式 */  
.keywords-container {  
  position: relative; /* 确保父容器有定位上下文 */  
  margin-top: 160px; /* 增加顶部间距以明确分隔上半部分和项目资料部分 */  
}  
  
.keyword-box {  
  display: inline-block;  
  width: 25%; /* 根据需要设置宽度 */ 
  margin: 0 10px; /* 使用边距来适应不同屏幕尺寸 */  
  background-color: #ccc; /* 灰色背景 */  
  padding: 10px; /* 内边距，根据需要调整 */  
  box-sizing: border-box; /* 如果设置了border，确保宽度包含它 */  
  text-align: center; /* 文本居中 */  
  border-radius: 5px; /* 可选，圆角边框 */  
}  
  
.keyword-box input {  
  width: 100%; /* 让input占满整个关键词框 */  
  font-size: 12px; /* 根据需要设置字体大小 */  
  color: #333; /* 文本颜色，根据需要调整 */  
  text-align: center; /* 文本居中 */  
  border: none; /* 去除input默认的边框 */  
  background-color: transparent; /* 让input的背景色与关键词框一致 */  
}  
  
.keyword-info {  
