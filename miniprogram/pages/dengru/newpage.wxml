<!-- pages/login/login.wxml -->
<view class="container">
  <image src="cloud://fufubuff-3gt0b01y042179cc.6675-fufubuff-3gt0b01y042179cc-1330048678/images/dengru.jpg" class="background-image"/>
  <form bindsubmit="formSubmit">
    <view class="input-group">
    <text class="label">账号</text>
    <input type="text" name="nickname" placeholder="请输入学工号" class="input-field" bindinput="inputChange" data-key="nickname"/>
</view>
<view class="input-group">
    <text class="label">密码</text>
    <input type="password" name="password" placeholder="请输入密码（初始6个8）" class="input-field" bindinput="inputChange" data-key="password"/>
</view>
    <image src="cloud://fufubuff-3gt0b01y042179cc.6675-fufubuff-3gt0b01y042179cc-1330048678/images/login-btn.png" bindtap="handleLoginTap" class="login-button"/>
  </form>
</view>
