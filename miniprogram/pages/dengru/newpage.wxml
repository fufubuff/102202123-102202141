<!-- pages/login/login.wxml -->
<view class="container">
  <image src="dengru.jpg" class="background-image"/>
  <form bindsubmit="formSubmit">
    <view class="input-group">
    <text class="label">账号</text>
    <input type="text" name="username" placeholder="请输入学工号" class="input-field" bindinput="inputChange" data-key="username"/>
</view>
<view class="input-group">
    <text class="label">密码</text>
    <input type="password" name="password" placeholder="请输入密码（初始6个8）" class="input-field" bindinput="inputChange" data-key="password"/>
</view>
    <image src="login-btn.png" bindtap="handleLoginTap" class="login-button"/>
  </form>
</view>
