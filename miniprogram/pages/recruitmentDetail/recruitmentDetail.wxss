/* 容器整体 */
.container {
  display: flex;
  flex-direction: column;
  padding: 20px;
  background-color: #ffffff;
  height: 100vh;
  overflow-y: scroll;
}

/* 返回按钮样式 */
.back-button {
  position: fixed;
  top: 20px;
  left: 20px;
  background-color: #1aad19;
  color: white;
  border: none;
  border-radius: 5px;
  padding: 5px 10px;
  font-size: 14px;
  cursor: pointer;
  z-index: 1002;
}

.back-button:hover {
  background-color: #179b16;
}

/* 加载动画 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-icon {
  width: 50px;
  height: 50px;
}

/* 招募详情 */
.recruitment-detail {
  padding: 20px;
  background-color: #f9f9f9;
  border-radius: 10px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  margin-top: 60px; /* 确保内容不被固定的返回按钮遮挡 */
}

/* 发布者信息 */
.recruiter-info {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}

.recruiter-info .avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%; /* 圆形头像 */
  margin-right: 10px;
}

.nickname {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

/* 招募信息 */
.recruitment-title {
  font-size: 22px;
  font-weight: bold;
  margin-bottom: 10px;
}

.details {
  font-size: 16px;
  color: #555;
  margin-bottom: 15px;
}

.recruitment-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 10px;
}

.tag {
  display: inline-block;
  background-color: #eee;
  color: #333;
  padding: 4px 8px;
  margin-right: 5px;
  margin-bottom: 5px;
  border-radius: 4px;
}

.time-info {
  color: #888;
  font-size: 14px;
}

/* 媒体查询（可选） */
@media screen and (max-width: 768px) {
  .recruiter-info .avatar {
    width: 40px;
    height: 40px;
  }

  .nickname {
    font-size: 16px;
  }

  .recruitment-title {
    font-size: 20px;
  }

  .details {
    font-size: 14px;
  }

  .tag {
    padding: 3px 6px;
    font-size: 12px;
  }

  .time-info {
    font-size: 12px;
  }

  /* 返回按钮调整 */
  .back-button {
    top: 15px;
    left: 15px;
    padding: 4px 8px;
    font-size: 12px;
  }

  /* 加载动画调整 */
  .loading-icon {
    width: 40px;
    height: 40px;
  }
}
